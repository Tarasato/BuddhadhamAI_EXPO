{
  "expo": {
    "name": "buddhadham_ai",
    "slug": "buddhadham_ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/buddhadham.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/buddhadham.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/buddhadham.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["RECORD_AUDIO"],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/buddhadham.png"
    },
    "plugins": ["expo-secure-store"]
  }
}